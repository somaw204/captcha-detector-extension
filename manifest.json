{
  "manifest_version": 3,
  "name": "CAPTCHA & Cloudflare Detector",
  "version": "1.0.0",
  "description": "Detects CAPTCHA systems and Cloudflare protection mechanisms on websites",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "css": ["ui-styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "CAPTCHA Detector"
  },
  "web_accessible_resources": [
    {
      "resources": ["ui-styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}